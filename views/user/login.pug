doctype html
head
  link(rel="stylesheet" href="/css/account_form.css")
  link(rel="stylesheet" href="/css/main.css")
body
  div.container
    h1 Login
    If you don't have a account with us yet signup 
    a(href="/user/signup") here
    form(action="/user/login" method="POST")
      input#username(name="username" type="text" placeholder=" ")
      label(for="username") Username
      br
      input#password(name="password" type="password" placeholder=" " required)
      label(for="password") Password
      br
      input#submit(type="submit" name="submit" value="Login")
      
  script(src="/js/login.js")